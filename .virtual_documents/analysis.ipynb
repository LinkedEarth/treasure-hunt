


import pyleoclim as pyleo
import pandas as pd
import re





# Filename and pattern to extract lat/lon
filename = 'ts_lmr_v2_1_0_tas_annual_lat_30.0_lon_-90.0.csv'

# Extract latitude and longitude from filename
lat_match = re.search(r'lat_([\-\d.]+)_', filename)
lon_match = re.search(r'lon_([\-\d.]+)\.csv', filename)

lat = float(lat_match.group(1))
lon = float(lon_match.group(1))

print(f"Latitude: {lat}°N, Longitude: {lon}°E")


df = pd.read_csv(filename, skiprows=12)
df





gs = pyleo.GeoSeries(
    time=df.iloc[:,0].values,
    value=df.iloc[:,1].values,
    lat=lat,
    lon=lon,
    time_name='Year',
    time_unit='CE',
    value_name='Temperature',
    value_unit='°C',
    label='LMR v2.1 mean'
)

print(gs)





gs.dashboard()





gs.stripes()





# Perform MTM spectral analysis
psd = gs.spectral(method='mtm')

# Run significance test with default parameters
psd_signif = psd.signif_test(number=500)

# Plot the results
psd_signif.plot()


psd_signif.amplitude
